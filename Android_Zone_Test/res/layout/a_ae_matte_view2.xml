<?xml version="1.0" encoding="utf-8"?>
<view.MaskConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mcl"
    android:background="@color/font_focus"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/aaaaaaaaaaaab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<!--    <ImageView-->
<!--        android:layout_width="300dp"-->
<!--        android:layout_height="match_parent"-->
<!--        android:src="@drawable/shape_grad_linear_matte" />-->

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/shape_grad_linear_matte" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@color/black" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@color/white" />

        <ImageView
            android:layout_marginRight="50dp"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:rotation="-180"
            android:src="@drawable/shape_grad_linear_matte" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/shape_grad_linear_matte" />
    </LinearLayout>
</view.MaskConstraintLayout>

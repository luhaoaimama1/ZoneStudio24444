<?xml version="1.0" encoding="utf-8"?>
<com.zone.view.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flowLayoutZone1"
    android:layout_width="match_parent"
    android:paddingTop="100dp"
    android:layout_height="wrap_content">

    <TextView

        android:id="@+id/darkMode"
        style="@style/TvOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="darkMode" />


    <TextView
        android:id="@+id/lightMode"
        style="@style/TvOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="lightMode" />


    <TextView
        android:id="@+id/darkModePop"
        style="@style/TvOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="darkModePop" />

</com.zone.view.FlowLayout>
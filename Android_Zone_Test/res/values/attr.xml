<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="position">
        <enum name="left_top" value="0" />
        <enum name="right_top" value="1" />
        <enum name="right_bottom" value="2" />
        <enum name="left_bottom" value="3" />
    </attr>
    <!--<attr name="radius" format="dimension"></attr>-->
    <!--<attr name="startAngel" format="float"></attr>-->
    <!--<attr name="spreadAngel" format="float"></attr>-->

    <declare-styleable name="ArcMenu">
        <attr name="position" />
        <attr name="radius" />
    </declare-styleable>

    <declare-styleable name="ArcMenu_Zone">
        <attr name="position" />
        <attr name="radius" />
        <attr name="startAngel" />
        <attr name="spreadAngel" />
    </declare-styleable>

    <declare-styleable name="CircleProgressView">
        <attr name="radius" format="dimension" />
        <attr name="progressStrokeWidth" format="dimension" />
        <attr name="progress" format="integer" />
        <attr name="progressInner" format="integer" />
    </declare-styleable>

    <declare-styleable name="GradientTextView">
        <attr name="gradientSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="SheetFrameLayout">
        <attr name="sheetMoveId" format="reference" />
    </declare-styleable>

    <declare-styleable name="CornerImageView">
        <attr name="civ_type">
            <enum name="none" value="0" />
            <enum name="circle" value="1" />
            <enum name="rounder" value="2" />
        </attr>

        <attr name="round_corner" format="dimension"/>

        <attr name="round_corner_top_left" format="dimension" />
        <attr name="round_corner_top_right" format="dimension" />
        <attr name="round_corner_bottom_left" format="dimension" />
        <attr name="round_corner_bottom_right" format="dimension" />

        <!--   {@link Path#addRoundRect  (RectF rect, float[] radii, Direction dir)}  -->
        <attr name="round_corner_top_left_x" format="dimension" />
        <attr name="round_corner_top_left_y" format="dimension" />
        <attr name="round_corner_top_right_x" format="dimension" />
        <attr name="round_corner_top_right_y" format="dimension" />
        <attr name="round_corner_bottom_left_x" format="dimension" />
        <attr name="round_corner_bottom_left_y" format="dimension" />
        <attr name="round_corner_bottom_right_x" format="dimension" />
        <attr name="round_corner_bottom_right_y" format="dimension" />

        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />

        <attr name="border_type">
            <!--     content的path =view-padding-border.width/2       -->
            <enum name="half_content_edge" value="0" />
            <!--     content的path =view-padding-border.width       -->
            <enum name="exclude_content" value="1" />
            <!--     content的path =view-padding       -->
            <enum name="include_content" value="2" />
        </attr>

    </declare-styleable>


    <declare-styleable name="ImageTextView">
        <attr name="leftDrawableWidth" format="dimension" />
        <attr name="leftDrawableHeight" format="dimension" />
        <attr name="leftDrawableMargin" format="dimension" />

        <attr name="topDrawableWidth" format="dimension" />
        <attr name="topDrawableHeight" format="dimension" />
        <attr name="topDrawableMargin" format="dimension" />

        <attr name="rightDrawableWidth" format="dimension" />
        <attr name="rightDrawableHeight" format="dimension" />
        <attr name="rightDrawableMargin" format="dimension" />

        <attr name="bottomDrawableWidth" format="dimension" />
        <attr name="bottomDrawableHeight" format="dimension" />
        <attr name="bottomDrawableMargin" format="dimension" />

        <attr name="drawableBackgroudColor" format="color" />
    </declare-styleable>

    <declare-styleable name="FbRelativeLayout">
        <attr name="color" format="color" />
        <attr name="strokeWidth" format="dimension"/>
        <attr name="strokeColor" format="color" />
        <attr name="radius2" format="dimension" />
        <attr name="scale" format="float" />
    </declare-styleable>
</resources>